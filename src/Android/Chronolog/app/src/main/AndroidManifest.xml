<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.revents.chronolog">

    <application
        android:name=".app.ChronologApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FactsViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".FactTypesListActivity" />
        <activity android:name=".features.EditFactTypeActivity" />
        <activity android:name=".EditFactActivity" />
        <activity
            android:name=".features.FactsfeedActivity"
            android:label="@string/title_activity_factsfeed"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.FactTypesActivity"
            android:label="@string/title_activity_fact_types"
            android:parentActivityName=".features.FactsfeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.revents.chronolog.features.FactsfeedActivity" />
        </activity>
    </application>

</manifest>